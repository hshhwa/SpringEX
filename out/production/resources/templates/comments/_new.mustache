<div class="card m-2" id="comments-new">
    <div class="card-body">
        <form>
            <div class="mb-3">
                <label class="form-label">닉네임</label>
                <input type="text" class="form-control" id="new-comment-nickname">
            </div>
            <div class="mb-3">
                <label class="form-label">댓글 내용</label>
                <textarea type="text" class="form-control" rows="3" id="new-comment-body"></textarea>
            </div>
            {{#article}}
                <input type="hidden" id="new-comment-article-id" value="{{id}}">
            {{/article}}
            <button type="button" class="btn btn-primary" id="comment-create-btn">댓글 작성</button>
        </form>
    </div>
</div>

<script>
    {
        const commentCreateBtn = document.getElementById('comment-create-btn');
        commentCreateBtn.addEventListener("click", function () {
            const comment = {
                nickname: document.getElementById('new-comment-nickname').value,
                body: document.getElementById('new-comment-body').value,
                articleId: document.getElementById('new-comment-article-id').value
            }
            console.log(comment);
            const url = "/api/articles/" + comment.articleId + "/comments";

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(comment)
            }).then(response => {
                const msg = (response.ok) ? "댓글이 등록되었습니다." : "댓글 등록에 실패했습니다.";
                alert(msg);
                window.location.reload();
            });
        });
    }
</script>